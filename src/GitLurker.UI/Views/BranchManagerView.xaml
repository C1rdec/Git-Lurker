<UserControl x:Class="GitLurker.UI.Views.BranchManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <Button BorderThickness="0" x:Name="Close" IsCancel="true" Width="1" Height="1" Background="Transparent"/>
        <Grid x:Name="Selector" Visibility="{Binding IsNotCreateBranch, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid VerticalAlignment="Top" Margin="0,-8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SearchTerm"
                         FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
                         VerticalAlignment="Center"
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         BorderThickness="0" 
                         mah:TextBoxHelper.Watermark="Search"
                         Width="250" FontSize="24"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                    <Button x:Name="ShowCreateBranch"
                    Width="30" Height="30"
                    BorderThickness="0"
                    Foreground="{DynamicResource MahApps.Brushes.Accent}"
                    Cursor="Hand"
                    Style="{StaticResource MahApps.Styles.Button.Circle}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <iconPacks:PackIconMaterial Kind="SourceBranchPlus" Height="18" Width="18" Foreground="{DynamicResource Brushes.Secondary}"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button x:Name="CleanBranches"
                    Width="30" Height="30"
                    BorderThickness="0"
                    Foreground="{DynamicResource MahApps.Brushes.Accent}"
                    Cursor="Hand"
                    Style="{StaticResource MahApps.Styles.Button.Circle}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <iconPacks:PackIconMaterial Kind="CloudRefresh" Height="25" Width="25" Foreground="{DynamicResource Brushes.Secondary}"/>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </Grid>
            <ListView ItemsSource="{Binding BranchNames}"
                      SelectedItem="{Binding SelectedBranchName}"
                      Grid.Row="1"
                      Cursor="Hand" 
                      cal:Message.Attach="[Event MouseUp] = [Action Execute()]">
                <ListView.Style>
                    <Style TargetType="ListView" BasedOn="{StaticResource MahApps.Styles.ListView}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property = "Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Style>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid x:Name="Main" Background="Transparent">
                            <TextBlock Text="{Binding}" Margin="15,5,30,5" VerticalAlignment="Center" FontSize="28" Background="Transparent"/>
                            <Border x:Name="Rebase" 
                                    cal:Message.Attach="[Event MouseUp] = [Action Rebase($dataContext)]" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Right"
                                    Background="Transparent"
                                    Padding="5">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"></Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=Main, Path=IsMouseOver}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <iconPacks:PackIconMaterial Kind="Merge" Height="18" Width="18" Foreground="{DynamicResource Brushes.Secondary}"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <mah:ProgressRing Foreground="{DynamicResource MahApps.Brushes.Accent}"
                              Grid.RowSpan="2"
                              IsActive="{Binding IsLoading}" />
        </Grid>
        <Grid x:Name="Creator" 
              Visibility="{Binding IsCreateBranch, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="NewBranchName"
                         VerticalAlignment="Center"
                         Text="{Binding NewBranchName, UpdateSourceTrigger=PropertyChanged}"
                         BorderThickness="0,0,0,1" 
                         mah:TextBoxHelper.Watermark="Branch Name"
                         Width="250" FontSize="24"/>
                <Button x:Name="CreateBranch2"
                    Width="30" Height="30"
                    BorderThickness="0"
                    Foreground="{DynamicResource MahApps.Brushes.Accent}"
                    Cursor="Hand"
                    Style="{StaticResource MahApps.Styles.Button.Circle}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <iconPacks:PackIconMaterial Kind="SourceBranchPlus" 
                                            Height="24" Width="24" 
                                            Margin="6,0,0,0"
                                            Foreground="{DynamicResource Brushes.Secondary}" 
                                            VerticalAlignment="Center"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
