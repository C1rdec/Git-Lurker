<UserControl x:Class="GitLurker.UI.Views.RepositoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Border CornerRadius="6"
            x:Name="MainBorder"
            Background="{DynamicResource MahApps.Brushes.Accent3}"
            Cursor="Hand">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border cal:Message.Attach="[Event MouseDown] = [Action Open()]" CornerRadius="6,0,0,6">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent3}"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsSelected}" Value="true">
                                <Setter Property="Background" Value="{DynamicResource Brushes.HighLight}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Image Height="60" Width="60" Margin="8">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="https://upload.wikimedia.org/wikipedia/commons/thumb/5/59/Visual_Studio_Icon_2019.svg/1200px-Visual_Studio_Icon_2019.svg.png"></Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasIcon}" Value="true">
                                        <Setter Property="Source" Value="{Binding IconSource}"></Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock x:Name="RepoName" 
                               Foreground="White"
                               MaxWidth="620"
                               TextTrimming="CharacterEllipsis"
                               FontSize="35" 
                               Margin="20,0,0,0" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border CornerRadius="0,6,6,0" Grid.Column="1" cal:Message.Attach="[Event MouseDown] = [Action Pull()]; [Event MouseEnter] = [Action ShowBranchName()]; [Event MouseLeave] = [Action ShowBranchName()]">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent4}"/>
                        <Setter Property="Opacity" Value="0.6"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource Brushes.HighLight}"/>
                                <Setter Property="Opacity" Value="1"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsSelected}" Value="true">
                                <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <TextBlock x:Name="BranchName" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Bottom" 
                               Foreground="LightGray" 
                               FontSize="14" 
                               Margin="4,0,4,4" 
                               FontWeight="SemiBold"/>
                    <iconPacks:PackIconMaterial Kind="ChevronDown" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.3"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
